<!DOCTYPE html>
<html lang="en">
<head>
    <title>Tv Series Tracker</title>
    <% include ./partials/head %>
</head>
<body ng-app="App" ng-controller="showController as show" class="ng-cloak">
<header>
    <% include ./partials/nav %>
</header>
<br>

<br>
<br>
<br>

<div class="row">
   <div class="col-md-6 col-md-offset-3 text-center">
       <div ng-hide="">
    <div class="col-md-12"  class="results" >
        <div class="results">
            <div  class="result">
                <div class="result-text-left">
                    <div><b>Name: </b> <%= series.name%></div>
                    <div><b>Status: </b> <%= series.status%> </div>
                    <div><b>Premier Date: </b><%= series.premierDate%></div>
                    <button  class="btn btn-primary btn-lg login-button" ng-click="show.search('<%= series.name%>')"> Get More Info </button>
                </div>
                <div class='result-text-right'>
                    <div  ng-bind-html="show.mydata.show.summary"><b> Description:</b>{{show.mydata.show.summary}} </div>
                    <img ng-src="{{show.mydata.show.image.medium}}" />
                </div>

            </div>
        </div>
    </div>
</div>

   </div>
</div>

<script src="/public/vendor/jquery/dist/jquery.js"></script>
<script src="/public/vendor/bootstrap/dist/js/bootstrap.js"></script>
<script src="/public/vendor/angular/angular.min.js"></script>
<script src="/public/vendor/angular-sanitize/angular-sanitize.min.js"></script>
<script src="/public/js/app.js"></script>

</body>
</html>