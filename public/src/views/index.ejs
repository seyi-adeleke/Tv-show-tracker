<!DOCTYPE html>
<html lang="en">
<head>
    <title>Tv Series Tracker</title>
    <% include ./partials/head %>
</head>
<body ng-app="App" ng-controller="mainController as main" class="ng-cloak">
<header>
    <% include ./partials/nav %>
</header>
<br>
<section>
    <form ng-submit="main.search()">
        <div class="container">
            <div class="row search-box">
                <h2 class="text-center">Search for your Favourite Series</h2>
                <div id="search-input">
                    <div class="input-group col-md-12">
                        <input type="text" ng-model="main.show" class="search-query form-control" placeholder="Search here" />
                        <span class="input-group-btn">
                            <button  class="btn btn-danger" id="search-button" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<br>
<br>

<div ng-hide="main.hide">
    <div class="col-md-12"  class="results" >
        <div class="results">
            <div  class="result">
                <div class="result-text-left">
                    <div><b>Name: </b> {{main.mydata.show.name}}</div>
                    <div><b>Status: </b> {{main.mydata.show.status}} </div>
                    <div><b>Premier Date: </b>{{main.mydata.show.premiered}}</div>

                    <form action="/" method="post">
                        <div class="form-group">
                            <input placeholder="Name" type="text" class="form-control" name="name">
                        </div>
                        <div class="form-group">
                            <input placeholder="Status" type="text" class="form-control" name="status">
                        </div>
                        <div class="form-group">
                            <input placeholder="Premier Date" type="text" class="form-control" name="premierDate">
                        </div>
                        <button class='btn btn-warning btn-lg fav-button' type='submit' >Add To favourites</button>
                    </form>

                </div>
                <div class='result-text-right'>
                    <div  ng-bind-html="main.mydata.show.summary"><b> Description:</b>{{main.mydata.show.summary}} </div>
                    <img ng-src="{{main.mydata.show.image.medium}}" />"
                </div>

            </div>
        </div>
    </div>
</div>
<div class="col-md-6 col-md-offset-3 text-center">
    <div>
        <h3 id="errors" ng-hide="main.error" ng-model="main.errorMessage">Sorry, you entered an incorrect search query</h3>
    </div>
</div>



<script src="/public/vendor/jquery/dist/jquery.js"></script>
<script src="/public/vendor/bootstrap/dist/js/bootstrap.js"></script>
<script src="/public/vendor/angular/angular.min.js"></script>
<script src="/public/vendor/angular-sanitize/angular-sanitize.min.js"></script>
<script src="/public/js/app.js"></script>

</body>
</html>